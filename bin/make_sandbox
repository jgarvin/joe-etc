#!/usr/bin/env zsh

mkdir -p $1
cd $1

echo "TL_PREFIX=$PWD" >> tlspec
echo "TL_MODULE_PATH=$PWD:/opt/tradelink/g++lib6" >> tlspec
echo "TL_SOURCE=$PWD/tradelink" >> tlspec
echo "TL_OPTIMIZATION_SETTING=off" >> tlspec
echo "TL_DEBUG_SETTING=on" >> tlspec
echo "TL_PROFILE_SETTING=off" >> tlspec
echo "TL_LIBRARY_CHOICE=prefer_static" >> tlspec
echo "TL_LIBRARY_TARGETS=static" >> tlspec

export CVSROOT=:pserver:joeg@cvs:/cvs
cvs co -l tradelink
cd tradelink
cvs up -ld apps
cvs up -ld libs
cvs up -ld servers

