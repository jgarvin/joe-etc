#!/usr/bin/env zsh

echo "=======================" >> ~/.launch_emacs_log
echo $(date) >> ~/.launch_emacs_log
echo "Running" >> ~/.launch_emacs_log

if [ -f $HOME/opt/bin/emacs ]; then
    echo "Choosing opt binary" >> ~/.launch_emacs_log
    binary="$HOME/opt/bin/emacs"
else
    echo "Choosing system binary" >> ~/.launch_emacs_log
    binary=$(which emacs)
fi

echo "Launching $binary" >> ~/.launch_emacs_log
$binary -c -a emacs "$@"
