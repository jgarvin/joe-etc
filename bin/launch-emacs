#!/bin/bash

# so that emacs has access to what I expect... should group these into something common to source
export PATH=$HOME/opt/bin:$PATH
export LD_LIBRARY_PATH=$HOME/opt/lib:$LD_LIBRARY_PATH

if [ $# -eq 0 ]; then
    file=$HOME
fi

# always be up to date on resource settings, need for remote emacs
xrdb ~/.Xresources
emacsclient --alternate-editor="" -c "$@" $file

